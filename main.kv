<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: btn1
        text: "On" if root.toggle == True else "Off"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.btn1()

    DPEAButton:
        id: btn2
        text: str(root.count)
        size: 100, 100
        x: root.width * 0.25
        y:root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.btn2()

    DPEAButton:
        id: btn3
        text: "Motor"
        size: 100, 100
        x: root.width * 0.125
        y:root.height * 0.5
        color: 0, 0, 1, 1
        on_press: root.btn3()

    Label:
        id: label1
        text: "On" if root.changeLabel == True else "Off"
        font_size: 50
        x: root.width * -0.355
        y: root.height * -0.1
        color: 0, 0, 0, 1

    Slider:
        id: slider1
        min: 0
        max: 100
        step: 1
        size_hint: 0.5, None
        x: root.width * 0.2753
        y: root.height * 0.25
        color: 1, 1, 1, 1

    Label:
        id: label2
        text: str(slider1.value)
        font_size: 50
        x: root.width * 0.02
        y: root.height * -0.25
        color: 0, 0, 0, 1

    ImageButton:
        id: logo_image_button
        source: "../../packages/RaspberryPiCommon/pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        on_press: root.pressed()