<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: btn1
        text: "On" if root.toggle == True else "Off"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.5
        color: 0, 1, 0, 1
        on_press: root.btn1()

    DPEAButton:
        id: btn2
        text: str(root.count)
        size: 100, 100
        x: root.width * 0.25
        y:root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.btn2()

    DPEAButton:
        id: btn3
        text: "Motor"
        size: 100, 100
        x: root.width * 0.125
        y:root.height * 0.5
        color: 0, 0, 1, 1
        on_press: root.btn3()

    Label:
        id: label1
        text: "On" if root.changeLabel == True else "Off"
        #size: 100, 100
        x: root.width * 0.125
        #y: root.height * 0.75
        color: 0, 0, 0, 1

    ImageButton:
        id: logo_image_button
        source: "../../pidev/kivy/images/DPEALogoTransparent.png"
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        on_press: root.pressed()